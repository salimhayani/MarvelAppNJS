{% extends 'layout.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="/css/app.css">

{% endblock %}

{% block body %}

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="/img/marvel_logo.png" style="height:70px;width:200px" alt="">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Liste des personnages
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Se déconnecter</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        {% if error %}
            <br>
            <div class="alert alert-danger">{{ error }}</div>
        {% else %}
            {% for hero in heroes %}
                    <div class="card">
                        <div class="row ">
                            <div class="col-md-2">
                                <div class="circle-img img-circle">
                                <img src="{{ hero.thumbnail.path ~ '.' ~ hero.thumbnail.extension }}" class="w-100" style="border-radius: 50%;">
                                </div>
                            </div>
                            <div class="col-md-10 px-3">
                                <div class="card-block px-3">
                                    <h4 class="card-title">{{ hero.name }}</h4>
                                    <p class="card-text"> {{ hero.description }} </p>
                                    <a href="/heroDetails/{{ hero.id }}" class="btn btn-dark">En savoir plus</a>
                                </div>
                            </div>

                        </div>
                    </div>
            {% endfor %}

            {% if maxPages > 1 %}
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        <li class="page-item {{ page == 1 ? "disabled" }}">
                            <a class="page-link" href="/list/{{ page - 1 < 1 ? 1 : page - 1 }}">« Précédent</a>
                        </li>

                        {% for i in 1..maxPages %}
                            <li class="page-item {{ page == i ? "active" }}">
                                <a href="/list/{{ i }}" class="page-link">{{ i }}</a>
                            </li>
                        {% endfor %}

                        <li class="page-item {{ page == maxPages ? "disabled" }}">
                            <a class="page-link" href="/list/{{ page + 1 <= maxPages ? page + 1 : page }}">Suivant »</a>
                        </li>
                    </ul>
                </nav>
            {% endif %}

        {% endif %}

    </div>
{% endblock %}
